<Window x:Class="wam.Dialogs.CloseConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Çıkış" Width="560" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False" Background="#F8F9FA"
        SizeToContent="Height"
        Icon="pack://application:,,,/Resources/wams.ico">
    <Window.Resources>
        <SolidColorBrush x:Key="AccentColor" Color="#4A90E2"/>
        <SolidColorBrush x:Key="AccentHover" Color="#3C7FD1"/>
        <SolidColorBrush x:Key="BorderColor" Color="#EAECEF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#212529"/>

        <Style x:Key="DialogPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource AccentHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DialogSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F6F8FB"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#D4E2F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#EDF2FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#F8F9FA">
        <Border Background="White" CornerRadius="10" Padding="24" BorderBrush="#EAECEF" BorderThickness="1" Margin="16">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.10" BlurRadius="18"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="44"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="36" Height="36" Background="#EAF2FE" CornerRadius="18" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" Foreground="#4A90E2" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Grid.Column="1"
                               Text="Uygulamayı kapatmak mı istersiniz, yoksa simge durumuna küçültmek mi?"
                               TextWrapping="Wrap"
                               FontSize="15"
                               Foreground="#212529"
                               Margin="12,0,0,0"/>
                </Grid>

                <StackPanel Grid.Row="1" Margin="0,16,0,16">
                    <RadioButton x:Name="MinimizeOption" Content="Simge durumuna küçült" IsChecked="True" FontSize="13"/>
                    <RadioButton x:Name="CloseOption" Content="Kapat" FontSize="13"/>
                    <CheckBox x:Name="RememberOption" Content="Seçimimi hatırla" Margin="0,12,0,0" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="İptal" Width="96" Margin="0,0,10,0" IsCancel="True" Style="{StaticResource DialogSecondaryButton}"/>
                    <Button Content="Onayla" Width="120" Click="Ok_Click" IsDefault="True" Style="{StaticResource DialogPrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

