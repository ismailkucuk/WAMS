<Window x:Class="wam.Dialogs.AdminRequiredDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Dialog_AdminRequired_Title}" Width="520" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False" Background="{DynamicResource BackgroundPage}"
        SizeToContent="Height"
        Icon="pack://application:,,,/Resources/wams.ico">
    <Window.Resources>
        <Style x:Key="DialogPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource PrimaryButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DialogSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BackgroundWhite}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource SecondaryButtonHover}"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource SecondaryButtonPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="{DynamicResource BackgroundPage}">
        <Border Background="{DynamicResource BackgroundWhite}" CornerRadius="10" Padding="24" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Margin="16">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Color="{DynamicResource ShadowColor}" Opacity="0.10" BlurRadius="18"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="{DynamicResource Dialog_AdminRequired_Message}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextColorPrimary}"/>
                <TextBlock Text="{DynamicResource Dialog_AdminRequired_Info}" Margin="0,8,0,0" Foreground="{DynamicResource TextColorSecondary}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                    <Button Content="{DynamicResource Common_Cancel}" Width="100" Margin="0,0,8,0" IsCancel="True" Style="{StaticResource DialogSecondaryButton}"/>
                    <Button Content="{DynamicResource Dialog_AdminRequired_GoSettings}" Width="130" IsDefault="True" Click="GoSettings_Click" Style="{StaticResource DialogPrimaryButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
