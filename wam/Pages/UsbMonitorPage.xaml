<UserControl x:Class="wam.Pages.UsbMonitorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:wam.Pages">
    <StackPanel Margin="20">
        <TextBlock Text="🔌 USB Cihaz Takip Modülü" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
        <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
            <Button Content="🔒 USB Portlarını Kapat" Width="200" Margin="5" Click="DisableUsbPorts_Click"/>
            <Button Content="🔓 USB Portlarını Aç" Width="200" Margin="5" Click="EnableUsbPorts_Click"/>
        </StackPanel>
        <ListView x:Name="UsbLogList" Height="400">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Zaman" Width="150" DisplayMemberBinding="{Binding Time}"/>
                    <GridViewColumn Header="Olay" Width="100" DisplayMemberBinding="{Binding Action}"/>
                    <GridViewColumn Header="Cihaz Bilgisi" Width="400" DisplayMemberBinding="{Binding DeviceName}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
