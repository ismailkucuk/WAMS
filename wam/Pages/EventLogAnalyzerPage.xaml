<UserControl x:Class="wam.Pages.EventLogAnalyzerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wam.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📊 Olay Günlüğü Analizi" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Olay Günlüğü Tipi:" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <RadioButton Content="Uygulama" GroupName="LogType" IsChecked="True" 
                         x:Name="ApplicationLogRadioButton"
                         Checked="LogType_Checked" Tag="Application" Margin="0,0,10,0"/>

            <RadioButton Content="Sistem" GroupName="LogType" 
                         x:Name="SystemLogRadioButton"
                         Checked="LogType_Checked" Tag="System" Margin="0,0,10,0"/>

            <RadioButton Content="Güvenlik" GroupName="LogType" 
                         x:Name="SecurityLogRadioButton"
                         Checked="LogType_Checked" Tag="Security" Margin="0,0,10,0"/>

            <Button Content="Yenile" Click="RefreshButton_Click" Margin="20,0,0,0" Height="25" Padding="10,0"/>
        </StackPanel>

        <DataGrid Grid.Row="2" 
                  x:Name="EventLogDataGrid" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#FFCCCCCC"
                  VerticalGridLinesBrush="#FFCCCCCC"
                  BorderBrush="#FFCCCCCC"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Zaman" Binding="{Binding TimeGeneratedFormatted}" Width="Auto" MinWidth="150"/>
                <DataGridTextColumn Header="Kaynak" Binding="{Binding Source}" Width="*" MinWidth="120"/>
                <DataGridTextColumn Header="Seviye" Binding="{Binding EntryType}" Width="Auto" MinWidth="80"/>
                <DataGridTextColumn Header="Olay ID" Binding="{Binding EventID}" Width="Auto" MinWidth="70"/>
                <DataGridTextColumn Header="Kategori" Binding="{Binding Category}" Width="*" MinWidth="100"/>
                <DataGridTextColumn Header="Mesaj" Binding="{Binding Message}" Width="3*" MinWidth="250"/>
                <DataGridTextColumn Header="Bilgisayar" Binding="{Binding MachineName}" Width="Auto" MinWidth="100"/>
                <DataGridTextColumn Header="Kullanıcı" Binding="{Binding UserName}" Width="Auto" MinWidth="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>