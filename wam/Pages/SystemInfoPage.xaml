<UserControl x:Class="wam.Pages.SystemInfoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F8F9FA">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentColor" Color="#4A90E2"/>
        <SolidColorBrush x:Key="TextColorPrimary" Color="#212529"/>
        <SolidColorBrush x:Key="TextColorSecondary" Color="#6C757D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DEE2E6"/>

        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" Color="Black" Opacity="0.08" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColorSecondary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColorPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="30">

            <Border Style="{StaticResource InfoCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Kullanıcı Adı:" Style="{StaticResource LabelText}" Margin="0,0,20,15"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="UserNameText" Style="{StaticResource ValueText}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Bilgisayar Adı:" Style="{StaticResource LabelText}" Margin="0,0,20,15"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="MachineNameText" Style="{StaticResource ValueText}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="IP Adresi:" Style="{StaticResource LabelText}" Margin="0,0,20,15"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="IpAddressText" Style="{StaticResource ValueText}" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="İşletim Sistemi:" Style="{StaticResource LabelText}" Margin="0,0,20,15"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="OsVersionText" Style="{StaticResource ValueText}" />

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Sistem Mimarisi:" Style="{StaticResource LabelText}" Margin="0,0,20,15"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ArchitectureText" Style="{StaticResource ValueText}" />

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Toplam RAM:" Style="{StaticResource LabelText}" Margin="0,0,20,15"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TotalRamText" Style="{StaticResource ValueText}" />

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Kullanılabilir RAM:" Style="{StaticResource LabelText}" Margin="0,0,20,15"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" x:Name="AvailableRamText" Style="{StaticResource ValueText}" />

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Domain:" Style="{StaticResource LabelText}" Margin="0,0,20,15"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" x:Name="DomainText" Style="{StaticResource ValueText}" />

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="BIOS Versiyonu:" Style="{StaticResource LabelText}" Margin="0,0,20,0"/>
                    <TextBlock Grid.Row="8" Grid.Column="1" x:Name="BiosText" Style="{StaticResource ValueText}" />
                </Grid>
            </Border>

            <Border Style="{StaticResource InfoCard}">
                <StackPanel>
                    <TextBlock Text="Disk Kullanımı" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextColorPrimary}" Margin="0,0,0,15"/>

                    <ItemsControl x:Name="DiskUsageItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="Bold" Foreground="{StaticResource TextColorPrimary}" FontSize="14"/>
                                        <TextBlock Grid.Column="1" Text="{Binding UsageText}" Foreground="{StaticResource TextColorSecondary}" FontSize="14" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <ProgressBar Grid.Row="1" 
                                                 Value="{Binding PercentageUsed, Mode=OneWay}" 
                                                 Height="12" 
                                                 BorderThickness="0">
                                        <ProgressBar.Style>
                                            <Style TargetType="ProgressBar">
                                                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                                <Setter Property="Background" Value="#EAECEF"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ProgressBar">
                                                            <Grid>
                                                                <Border x:Name="PART_Track" CornerRadius="6" Background="{TemplateBinding Background}" />
                                                                <Border x:Name="PART_Indicator" CornerRadius="6" Background="{TemplateBinding Foreground}" HorizontalAlignment="Left" />
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ProgressBar.Style>
                                    </ProgressBar>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>