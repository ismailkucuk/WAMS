<UserControl x:Class="wam.Pages.SystemInfoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:wam.Pages"
             Height="Auto" Width="Auto">
    <ScrollViewer>
        <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Top">

            <TextBlock Text="Sistem Bilgileri" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" />

            <UniformGrid Columns="2" Rows="10" Margin="0 10 0 0">
                <TextBlock Text="Kullanıcı Adı:" FontWeight="Bold"/>
                <TextBlock x:Name="UserNameText" />

                <TextBlock Text="Bilgisayar Adı:" FontWeight="Bold"/>
                <TextBlock x:Name="MachineNameText" />

                <TextBlock Text="IP Adresi:" FontWeight="Bold"/>
                <TextBlock x:Name="IpAddressText" />

                <TextBlock Text="İşletim Sistemi:" FontWeight="Bold"/>
                <TextBlock x:Name="OsVersionText" />

                <TextBlock Text="Sistem Mimarisi:" FontWeight="Bold"/>
                <TextBlock x:Name="ArchitectureText" />

                <TextBlock Text="Toplam RAM:" FontWeight="Bold"/>
                <TextBlock x:Name="TotalRamText" />

                <TextBlock Text="Kullanılabilir RAM:" FontWeight="Bold"/>
                <TextBlock x:Name="AvailableRamText" />

                <TextBlock Text="Domain:" FontWeight="Bold"/>
                <TextBlock x:Name="DomainText" />

                <TextBlock Text="BIOS Versiyonu:" FontWeight="Bold"/>
                <TextBlock x:Name="BiosText" />
            </UniformGrid>

            <TextBlock Text="Disk Bilgileri" FontSize="18" FontWeight="Bold" Margin="0 30 0 10" />
            <DataGrid x:Name="DiskInfoGrid" AutoGenerateColumns="False" Height="200" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Disk" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Toplam Alan" Binding="{Binding TotalSize}" />
                    <DataGridTextColumn Header="Boş Alan" Binding="{Binding FreeSpace}" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </ScrollViewer>
</UserControl>
