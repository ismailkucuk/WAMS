<UserControl x:Class="wam.Pages.NetworkMonitorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="🌐 Network - Port Monitor" FontSize="24"
                       FontWeight="Bold" Foreground="#2D2D30"
                       Margin="20,10,20,10"/>

            <!-- Filtreleme Butonları -->
            <StackPanel Orientation="Horizontal" Margin="20,0,20,10">
                <Button Content="🔌 Tüm Bağlantılar" Margin="0,0,10,0" Click="LoadAll"/>
                <Button Content="🔒 Yalnızca Listening Portlar" Margin="0,0,10,0" Click="LoadListening"/>
                <Button Content="⚠️ Kritik Portlar" Click="LoadCritical"/>
            </StackPanel>

            <ListView Name="ConnectionListView" Margin="20" Height="400">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="PID" Width="60" DisplayMemberBinding="{Binding ProcessId}" />
                        <GridViewColumn Header="Uygulama" Width="150" DisplayMemberBinding="{Binding ProcessName}" />
                        <GridViewColumn Header="Local IP" Width="140" DisplayMemberBinding="{Binding LocalAddress}" />
                        <GridViewColumn Header="Local Port" Width="80" DisplayMemberBinding="{Binding LocalPort}" />
                        <GridViewColumn Header="Remote IP" Width="140" DisplayMemberBinding="{Binding RemoteAddress}" />
                        <GridViewColumn Header="Alan Adı (Domain)" Width="250" DisplayMemberBinding="{Binding RemoteDomain}"/>
                        <GridViewColumn Header="Remote Port" Width="80" DisplayMemberBinding="{Binding RemotePort}" />
                        <GridViewColumn Header="Durum" Width="100" DisplayMemberBinding="{Binding State}" />
                        <GridViewColumn Header="Protokol" Width="70" DisplayMemberBinding="{Binding Protocol}" />
                        <GridViewColumn Header="Güvenlik" Width="150" DisplayMemberBinding="{Binding RiskLabel}" />
                        <GridViewColumn Header="İşlem" Width="130">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Engellendi" Visibility="{Binding IsBlocked, Converter={StaticResource BoolToVisibilityConverter}}" 
                                             Foreground="Red" FontWeight="Bold" Margin="0,0,10,0"/>
                                        <Button Content="Kapat" Tag="{Binding LocalPort}" Click="BlockPort_Click"
                                             Visibility="{Binding IsBlocked, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                        <Button Content="Aç" Tag="{Binding LocalPort}" Click="UnblockPort_Click"
                                             Visibility="{Binding IsBlocked, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
