<UserControl x:Class="wam.Pages.ActiveAppMonitorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Background="White">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="🪟 Aktif Uygulama Takibi" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="AppActivityGrid" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"  
                      Height="400"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#FFCCCCCC"
                      VerticalGridLinesBrush="#FFCCCCCC"
                      BorderBrush="#FFCCCCCC"
                      BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Süreç Adı" 
                                        Binding="{Binding Name}" 
                                        Width="*" 
                                        CanUserResize="True" 
                                        MinWidth="100"/>

                    <DataGridTextColumn Header="PID" 
                                        Binding="{Binding Id}" 
                                        Width="Auto" 
                                        CanUserResize="True" 
                                        MinWidth="50"/>

                    <DataGridTextColumn Header="Pencere Başlığı" 
                                        Binding="{Binding WindowTitle}" 
                                        Width="2*" 
                                        CanUserResize="True" 
                                        MinWidth="150"/>

                    <DataGridTextColumn Header="Bellek" 
                                        Binding="{Binding MemoryUsage}" 
                                        Width="Auto" 
                                        CanUserResize="True" 
                                        MinWidth="70"/>

                    <DataGridTextColumn Header="CPU" 
                                        Binding="{Binding CpuUsage}" 
                                        Width="Auto" 
                                        CanUserResize="True" 
                                        MinWidth="60"/>

                    <DataGridTextColumn Header="Başlangıç Saati" 
                                        Binding="{Binding StartTimeFormatted}" 
                                        Width="Auto" 
                                        CanUserResize="True" 
                                        MinWidth="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>