<UserControl x:Class="wam.Pages.StartupProgramsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:wam.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{DynamicResource BackgroundPage}">

    <UserControl.Resources>

        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundCard}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" Color="Black" Opacity="0.08" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomListViewItem" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource ControlHoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource AccentColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernListView" TargetType="ListView">
            <Setter Property="Background" Value="{DynamicResource BackgroundCard}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorPrimary}"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="MainScrollViewer">
        <StackPanel Margin="30">

            <!-- EXPORT CONTROL -->
            <controls:ExportControl x:Name="ExportControl" Margin="0,0,0,20"/>

            <!-- Birinci Tablo - Tam Ekran -->
            <Grid Height="600" Margin="0,0,0,100">
                <Border Style="{DynamicResource InfoCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{DynamicResource Startup_RegistryFolder}" FontSize="18" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Foreground="{DynamicResource TextColorPrimary}"
                                   Margin="5,0,5,20"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding StartupRegistryItems}" 
                                  Style="{StaticResource ModernListView}"
                                  BorderThickness="0" HorizontalContentAlignment="Stretch"
                                  ItemContainerStyle="{DynamicResource CustomListViewItem}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="10,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- liste içi ikonlar kurumsal görünüme uygun; bırakıldı -->
                                            <TextBlock Grid.Column="0" Text="&#xE753;" FontFamily="Segoe MDL2 Assets" FontSize="24" 
                                                       Foreground="{DynamicResource AccentColor}" VerticalAlignment="Center" Margin="0,0,20,0"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name, Mode=OneWay}" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource TextColorPrimary}"/>
                                                <TextBlock Text="{Binding Path, Mode=OneWay}" FontSize="12" FontStyle="Italic" Foreground="{DynamicResource TextColorSecondary}" Margin="0,3,0,0" TextTrimming="CharacterEllipsis" ToolTip="{Binding Path}"/>
                                            </StackPanel>

                                            <Border Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"
                                                    Background="{DynamicResource ControlHoverColor}" CornerRadius="10" Padding="10,5">
                                                <TextBlock Text="{Binding Source, Mode=OneWay}" FontWeight="SemiBold" FontSize="11" Foreground="{DynamicResource TextColorSecondary}"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>

            <!-- İkinci Tablo - Tam Ekran -->
            <Grid Height="600" Margin="0,30,0,100">
                <Border Style="{DynamicResource InfoCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{DynamicResource Startup_ScheduledTasks}" FontSize="18" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Foreground="{DynamicResource TextColorPrimary}"
                                   Margin="5,0,5,20"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding ScheduledTasks}" 
                                  Style="{StaticResource ModernListView}"
                                  BorderThickness="0" HorizontalContentAlignment="Stretch"
                                  ItemContainerStyle="{DynamicResource CustomListViewItem}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="10,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="220"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="&#xE916;" FontFamily="Segoe MDL2 Assets" FontSize="24" 
                                                       Foreground="{DynamicResource AccentColor}" VerticalAlignment="Top" Margin="0,0,20,0"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name, Mode=OneWay}" FontWeight="Bold" FontSize="15" Foreground="{DynamicResource TextColorPrimary}"/>
                                                <TextBlock Text="{Binding Action, Mode=OneWay, FallbackValue='Eylem bulunamadı'}" FontSize="11" FontStyle="Italic" Foreground="{DynamicResource TextColorSecondary}" Margin="0,3,0,5" TextTrimming="CharacterEllipsis" ToolTip="{Binding Action}"/>
                                                <TextBlock Opacity="0.8">
                                                    <Run Text="Tetikleyici:" FontSize="12" Foreground="{DynamicResource TextColorSecondary}" FontWeight="SemiBold"/>
                                                    <Run Text="{Binding Trigger, Mode=OneWay}" FontSize="12" Foreground="{DynamicResource TextColorSecondary}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" TextBlock.FontSize="12" TextBlock.Foreground="{DynamicResource TextColorSecondary}">
                                                <TextBlock TextAlignment="Right">
                                                    <Run Text="{DynamicResource Startup_LastRun}"/>
                                                    <Run Text="{Binding LastRunTime, Mode=OneWay}" FontWeight="SemiBold" Foreground="{DynamicResource TextColorPrimary}"/>
                                                </TextBlock>
                                                <TextBlock TextAlignment="Right" Margin="0,3,0,0">
                                                    <Run Text="{DynamicResource Startup_NextRun}"/>
                                                    <Run Text="{Binding NextRunTime, Mode=OneWay}" FontWeight="SemiBold" Foreground="{DynamicResource TextColorPrimary}"/>
                                                </TextBlock>
                                                <TextBlock TextAlignment="Right" Margin="0,3,0,0">
                                                    <Run Text="{DynamicResource Startup_Author}"/>
                                                    <Run Text="{Binding Author, Mode=OneWay}" FontWeight="SemiBold" Foreground="{DynamicResource TextColorPrimary}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>