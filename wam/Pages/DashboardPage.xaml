<UserControl x:Class="wam.Pages.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:wam.Controls"
             xmlns:local="clr-namespace:wam.Pages"
             xmlns:converters="clr-namespace:wam.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="{DynamicResource BackgroundPage}">

    <UserControl.Resources>
        
        <!-- InfoCard (match SystemInfoPage) -->
        <Style x:Key="CleanCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundWhite}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" Color="{DynamicResource ShadowColor}" Opacity="0.08" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Windows-Style Subtitle -->
        <Style x:Key="Subtitle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Minimal Metric Card -->
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundWhite}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinHeight" Value="80"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="0" Color="{DynamicResource ShadowColor}" BlurRadius="8" Opacity="0.04"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Windows-Style Button -->
        <Style x:Key="WindowsButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BackgroundWhite}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorPrimary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource WindowsButtonHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource WindowsButtonPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Quick Access Button (rounded, subtle hover) -->
        <Style x:Key="QuickAccessButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BackgroundWhite}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorPrimary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource QuickAccessButtonHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource QuickAccessButtonHoverBorder}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource QuickAccessButtonPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Action Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryButtonHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clean Progress Ring -->
        <Style x:Key="ProgressRing" TargetType="Ellipse">
            <Setter Property="Width" Value="72"/>
            <Setter Property="Height" Value="72"/>
            <Setter Property="StrokeThickness" Value="6"/>
            <Setter Property="Fill" Value="Transparent"/>
            <Setter Property="StrokeStartLineCap" Value="Round"/>
            <Setter Property="StrokeEndLineCap" Value="Round"/>
        </Style>

        <!-- Chip/Pill Style -->
        <Style x:Key="Chip" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="{DynamicResource ChipBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- Converters -->
        <converters:CircularProgressBarConverter x:Key="CircularProgressConverter"/>
        <converters:SparklinePointsConverter x:Key="SparklinePointsConverter"/>
        <converters:ThroughputFormatterConverter x:Key="ThroughputFormatter"/>
        
        <!-- KPI ProgressBar (rounded) -->
        <Style x:Key="KpiProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#EAECEF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border x:Name="PART_Track" CornerRadius="6" Background="{TemplateBinding Background}" />
                            <Border x:Name="PART_Indicator" CornerRadius="6" Background="{TemplateBinding Foreground}" HorizontalAlignment="Left" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Transparent">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- EXPORT CONTROL -->
            <controls:ExportControl Grid.Row="0" 
                                   x:Name="ExportControl"
                                   Margin="0,0,0,24"/>

            <!-- HEADER SECTION removed to avoid duplicate page title (MainWindow shows title) -->
            <Grid Grid.Row="1" Margin="0,0,0,0"/>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>

                <!-- KPI BAND -->
                <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource CleanCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Processes -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Processes" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                            <TextBlock Text="{Binding ActiveProcessCount}" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource AccentColor}"/>
                            <TextBlock Text="running" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                        </StackPanel>

                        <!-- Security events -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Security events" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                            <TextBlock Text="{Binding SecurityWarningsCount}" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource DangerRed}"/>
                            <TextBlock Text="last 24h" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                        </StackPanel>

                        <!-- USB devices -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="USB devices" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                            <TextBlock Text="{Binding UsbDeviceCount}" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextColorPrimary}"/>
                            <TextBlock Text="connected" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                        </StackPanel>

                        <!-- Startup programs -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Startup programs" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                            <TextBlock Text="{Binding StartupProgramCount}" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextColorPrimary}"/>
                            <TextBlock Text="entries" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- LEFT PANEL - PERFORMANCE & SYSTEM -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,24,0">
                    
                    <!-- SYSTEM PERFORMANCE -->
                    <Border Style="{StaticResource CleanCard}">
                        <StackPanel>
                            <TextBlock Text="System Performance" Style="{StaticResource SectionHeader}"/>
                            <TextBlock FontFamily="Segoe UI" FontSize="13" Foreground="{DynamicResource TextColorSecondary}" Margin="0,0,0,16">
                                <TextBlock.Text>
                                    <Binding Path="Uptime" StringFormat="Uptime: {0}"/>
                                </TextBlock.Text>
                            </TextBlock>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- CPU Usage (Semi-circular gauge) -->
                                <Border Grid.Column="0" Style="{StaticResource MetricCard}">
                                    <StackPanel>
                                        <controls:SemiCircularGauge Title="Processor" Value="{Binding CpuUsage, Mode=OneWay}" PeakValue="{Binding CpuPeak, Mode=OneWay}" ForegroundBrush="{Binding CpuStatusColor}"/>
                                        <TextBlock FontSize="12" Foreground="{DynamicResource TextColorSecondary}" Margin="0,8,0,0" TextTrimming="CharacterEllipsis">
                                            <TextBlock.Text>
                                                <Binding Path="CpuName"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- RAM Usage (Gauge) -->
                                <Border Grid.Column="1" Style="{StaticResource MetricCard}">
                                    <StackPanel>
                                        <controls:SemiCircularGauge Title="Memory" Value="{Binding RamUsagePercent, Mode=OneWay}" PeakValue="{Binding RamPeak, Mode=OneWay}" ForegroundBrush="{Binding RamStatusColor}"/>
                                        <TextBlock FontSize="12" Foreground="{DynamicResource TextColorSecondary}" Margin="0,8,0,0">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0:F1} GB in use • {1:F1} GB total">
                                                    <Binding Path="UsedRamGB"/>
                                                    <Binding Path="TotalRamGB"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- GPU Usage (Gauge) -->
                                <Border Grid.Column="2" Style="{StaticResource MetricCard}">
                                    <StackPanel>
                                        <controls:SemiCircularGauge Title="GPU" Value="{Binding GpuUsage, Mode=OneWay}" PeakValue="{Binding GpuPeak, Mode=OneWay}" ForegroundBrush="{Binding GpuStatusColor}"/>
                                        <TextBlock FontSize="12" Foreground="{DynamicResource TextColorSecondary}" Margin="0,8,0,0" TextTrimming="CharacterEllipsis">
                                            <TextBlock.Text>
                                                <Binding Path="GpuName"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- NETWORK ACTIVITY -->
                    <Border Style="{StaticResource CleanCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Network Activity" Style="{StaticResource SectionHeader}"/>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Margin="0,0,24,0">
                                        <TextBlock Text="{Binding ActiveConnections}"
                                                   FontSize="38"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryBlue}"
                                                   FontFamily="Segoe UI"/>
                                        <TextBlock Text="Active connections" FontSize="13" Foreground="{DynamicResource TextColorSecondary}" FontFamily="Segoe UI"/>
                                        <Grid Margin="0,6,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" FontSize="12" Foreground="{DynamicResource TextColorSecondary}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} down">
                                                        <Binding Path="DownMbps" Converter="{StaticResource ThroughputFormatter}"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <Polyline Grid.Row="1" Points="{Binding Path=DownHistory, Converter={StaticResource SparklinePointsConverter}, ConverterParameter='160,28'}" Stroke="{DynamicResource PrimaryBlue}" StrokeThickness="2" Opacity="0.8"/>
                                        </Grid>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding ListeningPorts}"
                                                   FontSize="38"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource SuccessGreen}"
                                                   FontFamily="Segoe UI"/>
                                        <TextBlock Text="Listening ports" FontSize="13" Foreground="{DynamicResource TextColorSecondary}" FontFamily="Segoe UI"/>
                                        <Grid Margin="0,6,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" FontSize="12" Foreground="{DynamicResource TextColorSecondary}">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} up">
                                                        <Binding Path="UpMbps" Converter="{StaticResource ThroughputFormatter}"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <Polyline Grid.Row="1" Points="{Binding Path=UpHistory, Converter={StaticResource SparklinePointsConverter}, ConverterParameter='160,28'}" Stroke="{DynamicResource SuccessGreen}" StrokeThickness="2" Opacity="0.8"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Content="View details" 
                                    Style="{StaticResource PrimaryButton}"
                                    VerticalAlignment="Center"
                                    Click="NavigateToNetworkMonitor_Click"/>
                        </Grid>
                    </Border>

                    <!-- TOP APPS (replaced System Modules) -->
                    <Border Style="{StaticResource CleanCard}">
                        <StackPanel>
                            <TextBlock Text="Top Applications (last 2 hours)" Style="{StaticResource SectionHeader}"/>
                            <ItemsControl>
                                <ItemsControl.ItemsSource>
                                    <Binding Path="TopApplications"/>
                                </ItemsControl.ItemsSource>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,6,0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}" FontSize="13" Foreground="{DynamicResource TextColorPrimary}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding StartTime, StringFormat=HH:mm}" FontSize="12" Foreground="{DynamicResource TextMuted}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- RIGHT PANEL - QUICK ACCESS & ACTIVITIES -->
                <StackPanel Grid.Row="1" Grid.Column="1">
                    
                    <!-- QUICK ACCESS -->
                    <Border Style="{StaticResource CleanCard}">
                        <StackPanel>
                            <TextBlock Text="Quick Access" Style="{StaticResource SectionHeader}"/>
                            
                            <StackPanel>
                                <Button Style="{StaticResource QuickAccessButton}" 
                                        Click="NavigateToProcessMonitor_Click" 
                                        Margin="0,0,0,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{DynamicResource AccentColor}" Width="4" Height="18" CornerRadius="2" Margin="0,0,12,0"/>
                                        <TextBlock Text="Process Monitor" 
                                                   FontSize="14" 
                                                   FontFamily="Segoe UI"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource QuickAccessButton}" 
                                        Click="NavigateToNetworkMonitor_Click" 
                                        Margin="0,0,0,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{DynamicResource SuccessGreen}" Width="4" Height="18" CornerRadius="2" Margin="0,0,12,0"/>
                                        <TextBlock Text="Network Monitor" 
                                                   FontSize="14" 
                                                   FontFamily="Segoe UI"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource QuickAccessButton}" 
                                        Click="NavigateToEventLogs_Click" 
                                        Margin="0,0,0,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{DynamicResource WarningOrange}" Width="4" Height="18" CornerRadius="2" Margin="0,0,12,0"/>
                                        <TextBlock Text="User Activities" 
                                                   FontSize="14" 
                                                   FontFamily="Segoe UI"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource QuickAccessButton}" 
                                        Click="NavigateToSystemInfo_Click"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{DynamicResource DangerRed}" Width="4" Height="18" CornerRadius="2" Margin="0,0,12,0"/>
                                        <TextBlock Text="USB Monitor" 
                                                   FontSize="14" 
                                                   FontFamily="Segoe UI"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- RECENT ACTIVITIES -->
                    <Border Style="{StaticResource CleanCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Recent Activities" Style="{StaticResource SectionHeader}" Margin="0"/>
                                <Border Background="{DynamicResource BackgroundLight}" 
                                        CornerRadius="2" 
                                        Padding="6,2" 
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top">
                                    <TextBlock Text="LIVE" 
                                               FontSize="10" 
                                               FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextMuted}"
                                               FontFamily="Segoe UI"/>
                                </Border>
                            </Grid>
                            
                            <ListView ItemsSource="{Binding RecentActivities}"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,12,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Grid.Column="0" Width="6" Height="6" Fill="{Binding IconColor}" VerticalAlignment="Center" Margin="4,0,12,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Description}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontSize="13" FontFamily="Segoe UI" Foreground="{DynamicResource TextPrimary}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Time, StringFormat='HH:mm'}" Foreground="{DynamicResource TextMuted}" VerticalAlignment="Center" FontSize="12" FontFamily="Segoe UI"/>
                                            <Rectangle Grid.ColumnSpan="3" Height="1" VerticalAlignment="Bottom" Fill="{DynamicResource BorderColor}" Opacity="0.4" Margin="0,8,0,-6"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- SYSTEM STATUS -->
                    <Border Style="{StaticResource CleanCard}">
                        <StackPanel>
                            <TextBlock Text="System Status" Style="{StaticResource SectionHeader}"/>
                            
                            <StackPanel>
                                <!-- Security Status -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" 
                                             Width="6" Height="6" 
                                             Margin="0,0,12,0" 
                                             VerticalAlignment="Center"
                                             Fill="{Binding SecurityStatusBrush}"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding SecurityStatusMessage}" 
                                                   FontSize="13"
                                                   Foreground="{DynamicResource TextPrimary}"
                                                   FontFamily="Segoe UI"/>
                                        <TextBlock Text="{Binding LastSecurityEvent}" 
                                                   FontSize="11" 
                                                   Foreground="{DynamicResource TextMuted}"
                                                   FontFamily="Segoe UI"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Performance Summary -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" 
                                             Width="6" Height="6" 
                                             Fill="{DynamicResource SuccessGreen}" 
                                             Margin="0,0,12,0" 
                                             VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1">
                                                                                 <TextBlock FontSize="13"
                                                    Foreground="{DynamicResource TextPrimary}"
                                                    FontFamily="Segoe UI">
                                            <TextBlock.Text>
                                                <Binding Path="ActiveProcessCount" StringFormat="{}{0} processes running"/>
                                            </TextBlock.Text>
                                         </TextBlock>
                                        <TextBlock FontSize="11" 
                                                   Foreground="{DynamicResource TextMuted}"
                                                   FontFamily="Segoe UI"
                                                   Margin="0,2,0,0">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="CPU: {0}% • RAM: {1:F1} GB">
                                                    <Binding Path="CpuUsage"/>
                                                    <Binding Path="UsedRamGB"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                
                                <Button Content="View security details" 
                                        Style="{StaticResource WindowsButton}"
                                        HorizontalAlignment="Stretch"
                                        Click="NavigateToSecurity_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
