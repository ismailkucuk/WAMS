<UserControl x:Class="wam.Pages.SecurityPolicyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:wam.Pages"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="{DynamicResource BackgroundPage}">

    <UserControl.Resources>
        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundWhite}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="PolicyItemBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundWhite}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="EditButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryButtonHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PolicyItemTemplateStyle" TargetType="Border" BasedOn="{StaticResource PolicyItemBorder}"/>
        <local:ScoreToBrushConverter x:Key="ScoreToBrushConverter"/>

        <DataTemplate x:Key="PolicyItemTemplate">
            <Border Style="{StaticResource PolicyItemTemplateStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource TextColorPrimary}"/>
                        <TextBlock Text="{Binding Description}" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text="{Binding StatusText}" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextColorPrimary}"/>
                    <Button Grid.Column="2" Content="{DynamicResource Common_Edit}" Style="{StaticResource EditButton}" Tag="{Binding EditKey}" Click="PolicyEdit_Click"/>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Policies -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <Border Style="{StaticResource InfoCard}">
                    <TextBlock Text="{DynamicResource Security_Status}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextColorPrimary}"/>
                </Border>

                <!-- Critical Issues -->
                <Border Style="{StaticResource InfoCard}">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Security_CriticalIssues}" FontWeight="SemiBold" FontSize="16" Foreground="{DynamicResource DangerColor}" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding CriticalIssues}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PolicyItemTemplateStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Width="8" Height="8" Fill="{DynamicResource DangerColor}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{DynamicResource TextColorPrimary}"/>
                                                <TextBlock Text="{Binding Detail}" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                                            </StackPanel>
                                            <Button Grid.Column="2" Content="{DynamicResource Security_Fix}" Style="{StaticResource EditButton}" Tag="{Binding FixKey}" Click="PolicyEdit_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Warnings -->
                <Border Style="{StaticResource InfoCard}">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Security_Warnings}" FontWeight="SemiBold" FontSize="16" Foreground="{DynamicResource WarningOrange}" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding WarningIssues}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource PolicyItemTemplateStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Width="8" Height="8" Fill="{DynamicResource WarningOrange}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{DynamicResource TextColorPrimary}"/>
                                                <TextBlock Text="{Binding Detail}" Foreground="{DynamicResource TextColorSecondary}" FontSize="12"/>
                                            </StackPanel>
                                            <Button Grid.Column="2" Content="{DynamicResource Security_Fix}" Style="{StaticResource EditButton}" Tag="{Binding FixKey}" Click="PolicyEdit_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Passed Checks -->
                <Border Style="{StaticResource InfoCard}">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Security_PassedChecks}" FontWeight="SemiBold" FontSize="16" Foreground="{DynamicResource TextColorPrimary}" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding PassedChecks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                                        <Ellipse Width="8" Height="8" Fill="{DynamicResource SuccessColor}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding}" Foreground="{DynamicResource TextColorPrimary}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right: Score & Recommendations -->
            <Border Grid.Column="1" Style="{StaticResource InfoCard}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Security_Score}" FontWeight="SemiBold" FontSize="16" Foreground="{DynamicResource TextColorPrimary}" Margin="0,0,0,20"/>
                    <Border Background="{DynamicResource BackgroundLight}" Padding="20" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="{DynamicResource ShadowColor}" BlurRadius="8" ShadowDepth="0" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding SecurityScore}" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5" Foreground="{Binding SecurityScore, Converter={StaticResource ScoreToBrushConverter}}"/>
                            <TextBlock Text="/ 100" FontSize="16" Foreground="{DynamicResource TextColorSecondary}" HorizontalAlignment="Center"/>
                            <ProgressBar Minimum="0" Maximum="100" Value="{Binding SecurityScore}" Height="8" Margin="10,10,10,6" Background="{DynamicResource BorderColor}" Foreground="{Binding SecurityScore, Converter={StaticResource ScoreToBrushConverter}}"/>
                            <TextBlock Text="{Binding SecurityScoreLabel}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,6,0,0" Foreground="{Binding SecurityScore, Converter={StaticResource ScoreToBrushConverter}}"/>
                        </StackPanel>
                    </Border>

                    <StackPanel>
                        <TextBlock Text="{DynamicResource Security_Recommendations}" FontWeight="SemiBold" FontSize="14" Foreground="{DynamicResource TextColorPrimary}" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding Recommendations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ., StringFormat=• {0}}" FontSize="12" Foreground="{DynamicResource TextColorSecondary}" TextWrapping="Wrap" Margin="0,0,0,6"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
