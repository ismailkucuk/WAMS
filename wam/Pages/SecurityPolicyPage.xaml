<UserControl x:Class="wam.Pages.SecurityPolicyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Background="White" Margin="10">
        <StackPanel>
            <TextBlock Text="🛡️ Güvenlik Politikaları" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

            <StackPanel Background="#f0f0f0" Margin="0,0,0,10">
                <TextBlock x:Name="PasswordRequiredText" FontSize="14"/>
                <TextBlock x:Name="MinPasswordLengthText" FontSize="14"/>
                <TextBlock x:Name="ComplexPasswordText" FontSize="14"/>
                <TextBlock x:Name="UacStatusText" FontSize="14"/>
                <TextBlock x:Name="RdpStatusText" FontSize="14"/>
                <TextBlock x:Name="GuestStatusText" FontSize="14"/>
                <TextBlock x:Name="AdministratorStatusText" FontSize="14"/>
                <TextBlock x:Name="SecurityScoreText" FontSize="14" FontWeight="Bold" Foreground="DarkGreen" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
