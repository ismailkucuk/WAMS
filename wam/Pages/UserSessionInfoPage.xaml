<UserControl x:Class="wam.Pages.UserSessionInfoPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Margin="10">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top">

            <TextBlock Text="🧑‍💻 Oturum Açan Kullanıcı" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <StackPanel Orientation="Vertical" Background="#eee" Margin="0,0,0,15">
                <TextBlock x:Name="CurrentUserText" FontSize="14"/>
                <TextBlock x:Name="UserSidText" FontSize="14"/>
                <TextBlock x:Name="IsAdminText" FontSize="14"/>
                <TextBlock x:Name="LoginDomainText" FontSize="14"/>
                <TextBlock x:Name="LoginTimeText" FontSize="14"/>
            </StackPanel>

            <TextBlock Text="👥 Tüm Yerel Kullanıcılar" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Kullanıcı Adı" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="SID" Binding="{Binding Sid}" Width="*"/>
                    <DataGridTextColumn Header="Admin Mi?" Binding="{Binding IsAdmin}" Width="*"/>
                    <DataGridTextColumn Header="Etkin Mi?" Binding="{Binding IsActive}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</UserControl>
