<UserControl x:Class="wam.Pages.ProcessMonitorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="🔗 Process Chain Analyzer" FontSize="24"
                       FontWeight="Bold" Foreground="#2D2D30"
                       Margin="20,10,20,10"/>

            <ListView Name="ProcessListView" Margin="20" Height="400">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="PID" Width="60" DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn Header="Ad" Width="200" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Başlama Zamanı" Width="180" DisplayMemberBinding="{Binding StartTime}" />
                        <GridViewColumn Header="Ana PID" Width="80" DisplayMemberBinding="{Binding ParentId}" />
                        <GridViewColumn Header="Ana İsim" Width="200" DisplayMemberBinding="{Binding ParentName}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
