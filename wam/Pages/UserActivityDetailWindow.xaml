<Window x:Class="wam.Pages.UserActivityDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource UserActivityDetail_Title}" Height="350" Width="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundPage}">
    <Window.Resources>
        <!-- Stiller -->
        <Style x:Key="HeaderBorderStyle" TargetType="Border">
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="{DynamicResource TextColorSecondary}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding EventId}" Value="4624">
                    <Setter Property="Background" Value="{DynamicResource SuccessColor}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding EventId}" Value="4634">
                    <Setter Property="Background" Value="{DynamicResource DangerColor}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding EventId}" Value="4672">
                    <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding EventId}" Value="4740">
                    <Setter Property="Background" Value="{DynamicResource WarningColor}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorSecondary}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColorPrimary}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık Alanı -->
        <Border Grid.Row="0" Style="{StaticResource HeaderBorderStyle}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource UserActivityDetail_EventIdPrefix}" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding EventId}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="-" FontSize="16" FontWeight="Light" Foreground="White" Margin="10,0"/>
                <TextBlock Text="{Binding EventType}" FontSize="16" FontWeight="Light" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Detaylar Alanı -->
        <Border Grid.Row="1" Padding="20" Background="{DynamicResource BackgroundWhite}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource UserActivityDetail_Username}" Style="{StaticResource LabelStyle}" Margin="0,0,15,15"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding UserName}" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource UserActivityDetail_Time}" Style="{StaticResource LabelStyle}" Margin="0,0,15,15"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TimeCreated}" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource UserActivityDetail_SessionType}" Style="{StaticResource LabelStyle}" Margin="0,0,15,15"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LogonType}" Style="{StaticResource ValueStyle}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource UserActivityDetail_SourceIp}" Style="{StaticResource LabelStyle}" Margin="0,0,15,15"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SourceIpAddress}" Style="{StaticResource ValueStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
