<Application x:Class="wam.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:wam.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default Light Theme - will be replaced by ThemeService -->
                <ResourceDictionary Source="pack://application:,,,/Themes/LightTheme.xaml"/>
                <!-- Default Turkish Language - will be replaced by LocalizationService -->
                <ResourceDictionary Source="pack://application:,,,/Resources/Strings.tr-TR.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
