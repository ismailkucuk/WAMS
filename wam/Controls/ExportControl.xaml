<UserControl x:Class="wam.Controls.ExportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <!-- Tasarım sistemi renkleri -->
        <SolidColorBrush x:Key="AccentColor" Color="#4A90E2"/>
        <SolidColorBrush x:Key="TextColorPrimary" Color="#212529"/>
        <SolidColorBrush x:Key="TextColorSecondary" Color="#6C757D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#EAECEF"/>
        <SolidColorBrush x:Key="ControlHoverColor" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#28a745"/>
        <SolidColorBrush x:Key="InfoColor" Color="#17a2b8"/>
        
        <!-- Subtle link-like button (less obtrusive) -->
        <Style x:Key="SubtleLinkButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource TextColorSecondary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border Background="Transparent" Margin="4" Padding="0">
        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- JSON Export Link -->
                <Button x:Name="JsonExportButton"
                        Style="{StaticResource SubtleLinkButton}"
                        Click="JsonExportButton_Click"
                        ToolTip="JSON olarak dışa aktar">
                    <TextBlock Text="JSON"/>
                </Button>
                <!-- CSV Export Link -->
                <Button x:Name="CsvExportButton"
                        Style="{StaticResource SubtleLinkButton}"
                        Click="CsvExportButton_Click"
                        ToolTip="CSV olarak dışa aktar">
                    <TextBlock Text="CSV"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl> 