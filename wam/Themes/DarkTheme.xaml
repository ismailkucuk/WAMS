<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="AccentColor" Color="#4A90E2"/>
    <SolidColorBrush x:Key="TextColorPrimary" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="TextColorSecondary" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
    <SolidColorBrush x:Key="BackgroundWhite" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="BackgroundLight" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="BackgroundPage" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SuccessGreen" Color="#10B981"/>
    <SolidColorBrush x:Key="WarningOrange" Color="#F59E0B"/>
    <SolidColorBrush x:Key="DangerRed" Color="#EF4444"/>
    
    <!-- Button Hover Colors -->
    <SolidColorBrush x:Key="PrimaryButtonHover" Color="#3C7FD1"/>
    <SolidColorBrush x:Key="SecondaryButtonHover" Color="#404040"/>
    <SolidColorBrush x:Key="SecondaryButtonPressed" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="QuickAccessButtonHover" Color="#404040"/>
    <SolidColorBrush x:Key="QuickAccessButtonPressed" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="WindowsButtonHover" Color="#404040"/>
    <SolidColorBrush x:Key="WindowsButtonPressed" Color="#4A4A4A"/>
    
    <!-- Toggle Switch Colors -->
    <SolidColorBrush x:Key="SwitchTrackOff" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="SwitchTrackOn" Color="#4A90E2"/>
    <SolidColorBrush x:Key="SwitchThumb" Color="White"/>
    <SolidColorBrush x:Key="SwitchTrackDisabled" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="SwitchThumbDisabled" Color="#555555"/>
    
    <!-- Chip/Pill Colors -->
    <SolidColorBrush x:Key="ChipBackground" Color="#404040"/>
    
    <!-- Progress Bar Colors -->
    <SolidColorBrush x:Key="ProgressBarBackground" Color="#404040"/>
    
    <!-- Shadow Colors -->
    <Color x:Key="ShadowColor">#000000</Color>
    
    <!-- Backward compatibility aliases -->
    <SolidColorBrush x:Key="PrimaryBlue" Color="#4A90E2"/>
    <SolidColorBrush x:Key="HoverBlue" Color="#3C7FD1"/>
    <SolidColorBrush x:Key="LightBlue" Color="#404040"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="TextMuted" Color="#808080"/>
    <SolidColorBrush x:Key="BorderLight" Color="#404040"/>
    <SolidColorBrush x:Key="BorderMedium" Color="#404040"/>
    
    <!-- Global ListView style for smooth scrolling -->
    <Style TargetType="ListView">
        <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalOnly"/>
        <Setter Property="ScrollViewer.PanningDeceleration" Value="0.1"/>
        <Setter Property="ScrollViewer.PanningRatio" Value="1"/>
        <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel"/>
    </Style>
</ResourceDictionary>