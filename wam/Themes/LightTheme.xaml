<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Colors -->
    <SolidColorBrush x:Key="AccentColor" Color="#4A90E2"/>
    <SolidColorBrush x:Key="TextColorPrimary" Color="#212529"/>
    <SolidColorBrush x:Key="TextColorSecondary" Color="#6C757D"/>
    <SolidColorBrush x:Key="BorderColor" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="BackgroundWhite" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundLight" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="BackgroundPage" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="SuccessGreen" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningOrange" Color="#FF8C00"/>
    <SolidColorBrush x:Key="DangerRed" Color="#D13438"/>
    
    <!-- Button Hover Colors -->
    <SolidColorBrush x:Key="PrimaryButtonHover" Color="#3C7FD1"/>
    <SolidColorBrush x:Key="SecondaryButtonHover" Color="#F6F8FB"/>
    <SolidColorBrush x:Key="SecondaryButtonPressed" Color="#EDF2FA"/>
    <SolidColorBrush x:Key="QuickAccessButtonHover" Color="#F6F8FB"/>
    <SolidColorBrush x:Key="QuickAccessButtonPressed" Color="#EDF2FA"/>
    <SolidColorBrush x:Key="WindowsButtonHover" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="WindowsButtonPressed" Color="#EAECEF"/>
    
    <!-- Toggle Switch Colors -->
    <SolidColorBrush x:Key="SwitchTrackOff" Color="#CED4DA"/>
    <SolidColorBrush x:Key="SwitchTrackOn" Color="#4A90E2"/>
    <SolidColorBrush x:Key="SwitchThumb" Color="White"/>
    <SolidColorBrush x:Key="SwitchTrackDisabled" Color="#E9ECEF"/>
    <SolidColorBrush x:Key="SwitchThumbDisabled" Color="#F8F9FA"/>
    
    <!-- Chip/Pill Colors -->
    <SolidColorBrush x:Key="ChipBackground" Color="#F1F5F9"/>
    
    <!-- Progress Bar Colors -->
    <SolidColorBrush x:Key="ProgressBarBackground" Color="#EAECEF"/>
    
    <!-- Shadow Colors -->
    <Color x:Key="ShadowColor">#000000</Color>
    
    <!-- Backward compatibility aliases -->
    <SolidColorBrush x:Key="PrimaryBlue" Color="#4A90E2"/>
    <SolidColorBrush x:Key="HoverBlue" Color="#3C7FD1"/>
    <SolidColorBrush x:Key="LightBlue" Color="#EAECEF"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#212529"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#6C757D"/>
    <SolidColorBrush x:Key="TextMuted" Color="#8A8F98"/>
    <SolidColorBrush x:Key="BorderLight" Color="#DEE2E6"/>
    <SolidColorBrush x:Key="BorderMedium" Color="#DEE2E6"/>
    
    <!-- Global ListView style for smooth scrolling -->
    <Style TargetType="ListView">
        <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalOnly"/>
        <Setter Property="ScrollViewer.PanningDeceleration" Value="0.1"/>
        <Setter Property="ScrollViewer.PanningRatio" Value="1"/>
        <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel"/>
    </Style>
</ResourceDictionary>